{
  "manifest_version": 2,
  "name": "readify-surf with added bot spoofing",
  "version": "0.1.2",
  "description": "Toggle Readify mode for the current tab and spoof as a search engine bot.",
  "permissions": ["tabs", "contextMenus", "webRequest", "webRequestBlocking"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Toggle Readify",
    "default_icon": {
      "16": "icons/readify-16.png",
      "48": "icons/readify-48.png",
      "128": "icons/readify-128.png"
    }
  },
  "icons": {
    "16": "icons/readify-16.png",
    "48": "icons/readify-48.png",
    "128": "icons/readify-128.png"
  }
}
